<h2> Add a Task </h2>

<%= form_for ([@project, @project.tasks.build]) do |f| %>
	<div class ="field">
	<%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Description %><br />
    <%= f.text_area :description %>
  </div>
<div class="filed">
  <%= f.label :completion_date %> <br/>
  <%= f.datetime_select :completion_date %>
<div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>